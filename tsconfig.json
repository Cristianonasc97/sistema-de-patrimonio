{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "index.tsx",
    "App.tsx",
    "tipos.ts",
    "constantes.ts",
    "vite.config.ts",
    "componentes/**/*",
    "telas/**/*",
    "hooks/**/*",
    "servicos/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "screens",
    "services",
    "components",
    "hooks/useAuth.tsx",
    "types.ts",
    "constants.ts"
  ]
}